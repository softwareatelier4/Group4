{% extends 'master' %}

{% block content %}
<div class="container">

  <div id="search-form" class="form-group row justify-content-center">
    <div class="col-sm-10">
      <input type="text" class="form-control" id="searchbox" placeholder="Plumber">
      <button id="search" type="submit" class="btn btn-primary">Search</button>
    </div>
  </div>

  <div id="results" class="row justify-content-center">
    <div class="col-12 col-md-8">
      {% for profile in profiles %}
      <div class="result-item">
        <div class="row">
          <div class="col-md-12 result-item-title">
            Profile {{ profile.id }}
          </div>
        </div>
        <div class="row result-item-details">
          <div class="col-md-3"><a href="{{profile.website}}"> {{ profile.website }} </a></div>
          <div class="col-md-3">{{ profile.telephone }}</div>
          <div class="col-md-4">{{ profile.city }}</div>
        </div>
        <div class="row">
          <div class="col-md-12">
            {{ profile.description }} <br>
          </div>
        </div>
      </div>

      {% endfor %}
    </div>
  </div>

</div>
{% endblock %}
