{% extends 'master' %}

{% block content %}
<div class="container">
  <form action="/profiles" class="mb-5" method="GET">
    <div id="search-form" class="form-group row justify-content-center">
      <div class="col-sm-10">
        <input type="text" class="form-control" id="searchbox" name="search" placeholder="Plumber">
        <button id="search" type="submit" class="btn btn-primary">Search</button>
      </div>
    </div>
  </form>

  <div class="row justify-content-center">
    <div class="col-12 col-md-10">
      {% for profile in profiles %}
      <div class="result-item">
        <div class="row">
          <div class="col-md-4">
            <img src="{{ profile.logo }}" class="img-fluid" alt="{{ profile.title }} logo">
          </div>
          <div class="col-md-8">
            <div class="row">
              <div class="col-12 result-item-title">
                {{ profile.id }}
                <a href="/profiles/{{ profile.id }}">{{ profile.title }}</a>
              </div>
            </div>
            <div class="row result-item-detail">
              <div class="col"><a href="{{profile.website}}"> {{ profile.website }} </a></div>
              <div class="col">{{ profile.telephone }}</div>
              <div class="col">{{ profile.city }}</div>
            </div>
            <div class="row mt-1">
              <div class="col">
               {{ profile.description | truncate(300)}}
             </div>
           </div>
         </div>
       </div>
     </div>
     {% else %}
     <div class="alert alert-warning font-italic" role="alert">
       Your search did not match any profile.
     </div>

     {% endfor %}
   </div>
 </div>

</div>
{% endblock %}
