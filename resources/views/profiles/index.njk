{% extends 'master' %}
{% block content %}
  <div class="row mb-4 mt-4">
    <div class="col-10 offset-md-1 px-0 mt-5">
      <select id="orderBy" class="custom-select float-right " name="category" onchange="location= this.value;">
        <option {{ "selected" if ( request.orderBy == 0) }} value="{{ queryWithoutOrder + 'orderBy=0' }}">Distance Low</option>
        <option {{ "selected" if ( request.orderBy == 1) }} value="{{ queryWithoutOrder + 'orderBy=1' }}">Distance High</option>
        <option {{ "selected" if ( request.orderBy == 2) }} value="{{ queryWithoutOrder + 'orderBy=2' }}">Price Low</option>
        <option {{ "selected" if ( request.orderBy == 3) }} value="{{ queryWithoutOrder + 'orderBy=3' }}">Price High</option>
        <option {{ "selected" if ( request.orderBy == 4) }} value="{{ queryWithoutOrder + 'orderBy=4' }}">Rating Low</option>
        <option {{ "selected" if ( request.orderBy == 5) }} value="{{ queryWithoutOrder + 'orderBy=5' }}">Rating High</option>
      </select>
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-md-1 px-0">
      {% for profile in profiles.data %}
        <div class="row result-item align-items-center py-4">
          <div class="col-md-3 text-center">
            <img src="/profile_images/{{ profile.logo }}" class="img-fluid" alt="{{ profile.title }} logo">
          </div>
          <div class="col-md-9">
            <div class="row">
              <div class="col-12 item-header">
                <div class="row">
                  <div class="col-8 item-title">
                    <a href="/profiles/{{ profile.id }}">{{ profile.title }}</a>
                  </div>
                  <div class="col-4 float-right text-right item-rating">
                    <select class="ratings" autocomplete="off" style="display: none;" >
                      <option value="1" {{ "selected" if (profile.overall_rating == 1) }}>1</option>
                      <option value="2" {{ "selected" if (profile.overall_rating == 2) }}>2</option>
                      <option value="3" {{ "selected" if (profile.overall_rating == 3) }}>3</option>
                      <option value="4" {{ "selected" if (profile.overall_rating == 4) }}>4</option>
                      <option value="5" {{ "selected" if (profile.overall_rating == 5) }}>5</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
            <div class="row ">
              <div class="col-4 text-left item-price">
                <b>Price</b> $<span>{{ profile.price }}</span>
              </div>
              <div class="col-4 text-left item-distance"><b>Distance</b> {{ profile.distance | round }} km</a></div>
            </div>
            <div class="row mt-3">
              <div class="col">
                {{ profile.description | truncate(300)}}
              </div>
            </div>
            <div class="row item-detail mt-3">
              <div class="col"><a href="{{profile.website}}"><i class="fa fa-home" aria-hidden="true"></i> {{ profile.website | truncate(20) }} </a></div>
              <div class="col"><i class="fa fa-phone" aria-hidden="true"></i> {{ profile.telephone }}</div>
              <div class="col"><i class="fa fa-address-card" aria-hidden="true"></i> {{ profile.city }}</div>
            </div>
          </div>
        </div>
{% else %}
        <div class="alert alert-warning font-italic" role="alert">
          Your search did not match any profile.
        </div>
      {% endfor %}
    </div>
  </div>
  </div>
{% endblock %}
{% block javascript %}
  <script type="text/javascript">
    $('.ratings').barrating('show', {
      theme: 'fontawesome-stars',
      showSelectedRating: false,
      readonly: true,
    });
  </script>
{% endblock  %}
